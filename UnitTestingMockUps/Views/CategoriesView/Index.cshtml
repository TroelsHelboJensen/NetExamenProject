@model UnitTestingMockUps.Models.Views.CategoeriesViewModel
@{
    ViewBag.Title = "Index - Categories";
}

<center><h2>Index of Categories</h2></center>

<!-- Start of the CategoryHeader Divs -->
<div class="container category-border">
    <div class="col-xs-12 category">
        <div class="category-header category left">
            <h3><u><b>@Model.CategoryHeaderModel.Name</b></u></h3>
        </div>
        <div class="category category-create-link right">
            @Html.ActionLink("Create New", "Create", "CategoryHeader", null, new { @class = "btn btn-primary btn-create" })
        </div>
        <div class="clear-float">
            <hr />
        </div>
    </div>

    @foreach (var header in Model.CategoryHeaders)
    {
        <div class="col-xs-3 form-group">
            <h3>@Html.DisplayFor(ch => header.Name)</h3>
            <p>ID: @Html.DisplayFor(ch => header.CategoryHeaderModelId, new { @class = "category-id" })</p>

            <div class="form-inline">
                @Html.ActionLink("Edit", "Edit", "CategoryHeader", new { id = header.CategoryHeaderModelId }, new { @class = "btn btn-primary btn-edit" })
                @Html.ActionLink("Delete", "Delete", "CategoryHeader", new { id = header.CategoryHeaderModelId }, new { @class = "btn btn-default btn-delete" } )
            </div>
        </div>
    }
</div>

<div class="line-split-horizotal">
    <hr />
</div>

<!-- Start of the Categories Div -->
<div class="container category-border">
    <div class="col-xs-12 category">
        <div class="category-header category left">
            <h3><u><b>@Model.CategoryModel.Name</b></u></h3>
        </div>
        <div class="category category-create-link right">
            @Html.ActionLink("Create New", "Create", "Category", null, new { @class = "btn btn-primary btn-create" })
        </div>
        <div class="clear-float">
            <hr />
        </div>
    </div>

    @foreach (var category in Model.Categories)
    {
        <div class="col-xs-3 form-group">
            <h3>@Html.DisplayFor(ch => category.Name)</h3>
            <p>ID: @Html.DisplayFor(ch => category.CategoryModelId, new { @style = "font-weight: bold" })</p>
            
            <p>@Html.DisplayFor(ch => category.CategoryHeaderModel.Name)</p>
            <div class="form-inline">
                @Html.ActionLink("Edit", "Edit", "Category", new { id = category.CategoryModelId }, new { @class = "btn btn-primary btn-edit" })
                @Html.ActionLink("Delete", "Delete", "Category", new { id = category.CategoryModelId }, new { @class = "btn btn-default btn-delete" })
            </div>
        </div>
    }
</div>