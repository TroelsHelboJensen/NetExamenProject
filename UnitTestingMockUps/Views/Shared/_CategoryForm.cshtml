@model UnitTestingMockUps.Models.Entity.CategoryModel

<div class="form-horizontal">
    <h4>Category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label col-xs-2" } })
        <div class="">
            @Html.TextBoxFor(ch => ch.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(ch => ch.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryHeaderModelId, "CategoryHeaderModelId", htmlAttributes: new { htmlAttributes = new { @class = "control-label col-xs-2" } })
        <div class="">
            
            @Html.DropDownListFor(model => model.CategoryHeaderModelId, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(ch => ch.CategoryHeaderModelId, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
